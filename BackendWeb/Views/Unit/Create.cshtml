@using DBClassLibrary.DomainLayer.UnitModel
@model UnitData
@{
    ViewBag.Title = "建立新的單位";
}


<h3>建立新的單位 :</h3>

@using (Html.BeginForm("Create", "Unit", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.UnitNumber, new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.UnitNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UnitNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.UnitName, new { @class = "col-md-4 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.UnitName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UnitName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="tw-block-btn">
        <input type="submit" class="btn btn-primary" value="新增" />
        @Html.ActionLink("取消", "Index", "Unit", null, new { @class = "btn btn-default" })
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
