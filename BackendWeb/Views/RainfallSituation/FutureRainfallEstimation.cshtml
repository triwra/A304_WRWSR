    <link href="~/SCSS/Views/RainfallSituation/FutureRainfallEstimation/PageStyle.min.css?@DateTime.Now.Ticks" rel="stylesheet" />
    <style>
        [id $= "map"] {
            height: 750px;
        }
    </style>
}

<div class="page-body">
    <div class="container-xl">
        <div class="row row-cards">
            <!--PageContent-->
            <!--台灣地圖-->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="p-3 d-flex flex-column align-items-center">
                            <h1 class="mb-0">第一週</h1>
                            <h2> @startDate1 ~ @endDate1</h2>
                        </div>
                        <div class="">
                            <div id="week1_map" style="background-color:white;"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div  class="p-3 d-flex flex-column align-items-center">
                            <h1 class="mb-0">第二週</h1>
                            <h2>@startDate2 ~ @endDate2</h2>
                        </div>
                        <div class="">
                            <div id="week2_map" style="background-color:white;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

